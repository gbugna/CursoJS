{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "airbnb-base",
        "plugin:cypress/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": ["warn", {"js": "always"}],
        "spaced-comment": ["warn", "always", {"exceptions": ["/-"], "markers": ["/"]}]
    },
    "plugins": [
        "cypress",
        "jest"
    ]
}
